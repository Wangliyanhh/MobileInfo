        android:layout_below="@id/tv5"
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxxxx"
        android:textSize="20sp"/>


    <TextView
        android:layout_below="@id/tv6"
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VersionName:"
        android:textSize="20sp"/>
    <TextView
        android:layout_below="@id/tv6"
